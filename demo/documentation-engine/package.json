{
  "name": "@skeleton-crew/documentation-engine",
  "version": "1.0.0",
  "description": "Plugin-driven documentation engine built on Skeleton Crew Runtime",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:parser && tsc && vite build",
    "build:parser": "tsx scripts/build-parser.ts",
    "build:static": "npm run build && npm run export:static",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ci": "vitest --run --coverage",
    "export:static": "tsx scripts/export-static.ts"
  },
  "keywords": [
    "documentation",
    "markdown",
    "mdx",
    "plugin",
    "skeleton-crew"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.8",
    "@types/prismjs": "^1.26.5",
    "codemirror": "^6.0.2",
    "minisearch": "^6.3.0",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx": "^3.0.0",
    "remark-parse": "^11.0.0",
    "skeleton-crew-runtime": "file:../..",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.0",
    "fast-check": "^3.15.0",
    "jsdom": "^27.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
